<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.deliver.DeliverActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <!-- 订单信息 -->
        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="start|center_vertical"
            android:background="#f3e3dc"
            android:text="订单号：201803051710059325282"
            android:textColor="#ff7712"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />
        <TextView
            android:id="@+id/tv_order_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="start|center_vertical"
            android:background="#f3e3dc"
            android:text="联系人：小昭"
            android:textColor="#ff7712"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />
        <TextView
            android:id="@+id/tv_order_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="start|center_vertical"
            android:background="#f3e3dc"
            android:text="手机号：13800138000"
            android:textColor="#ff7712"
            android:textSize="14sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />
        <TextView
            android:id="@+id/tv_order_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="start|center_vertical"
            android:background="#f3e3dc"
            android:text="配送地址："
            android:textColor="#ff7712"
            android:textSize="14sp"/>
        <!-- 商品信息 -->
        <LinearLayout
            android:id="@+id/ll_goods_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <!-- 操作记录 -->
        <LinearLayout
            android:id="@+id/ll_history_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <!-- 操作按钮 -->
        <Button
            android:id="@+id/btn_deliver_action"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/square_orange_bg"
            android:text="开始派送"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>